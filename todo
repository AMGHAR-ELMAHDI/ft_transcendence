-search : http://127.0.0.1:2500/search/<username>
	list of players usernames

home : http://localhost:2500/players/me/
	avatar_path
	username
	first_name
	last_name
	level (hua 1000 xp = 1lvl)
	win_rate
	trophies_rate
	friends {
	online friends
	offline friends
	}
	games []
	achievement_per_user
	item_per_user

leaderboard : http://localhost:2500/players/leaderboard/
	list of players sorted by xp

settings : http://localhost:2500/player/setting/


shop
	items
	get : [type, avatar, title, prix] : http://localhost:2500/shop/
